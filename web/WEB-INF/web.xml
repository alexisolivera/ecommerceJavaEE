<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Inicio</servlet-name>
        <servlet-class>view.Inicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiarMoneda</servlet-name>
        <servlet-class>control.CambiarMoneda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>view.Admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlProducto</servlet-name>
        <servlet-class>control.ControlProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>view.Cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inicio</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiarMoneda</servlet-name>
        <url-pattern>/CambiarMoneda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlProducto</servlet-name>
        <url-pattern>/ControlProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>view.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/EditProduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>view.EditProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlEditarProducto</servlet-name>
        <url-pattern>/ControlEditarProducto</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControlEditarProducto</servlet-name>
        <servlet-class>control.ControlEditarProducto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlmandaDatosParaEditar</servlet-name>
        <url-pattern>/ControlmandaDatosParaEditar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControlmandaDatosParaEditar</servlet-name>
        <servlet-class>control.ControlmandaDatosParaEditar</servlet-class>
    </servlet>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <location>/404.html</location>
    </error-page>
</web-app>